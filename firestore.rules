rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /earlyadopters/{email} {
    	allow create: if request.auth.uid != null;      
    	allow update: if request.auth.uid != null
		}
  }
}